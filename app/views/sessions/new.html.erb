<h3>Sign In</h3>

<%= form_tag "/sessions" do %>

  <p>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </p>

  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>

  <%= submit_tag "Log in!" %>
<% end %>

<br>
<p><%= link_to "Forgot password?", new_password_reset_path %></p>
