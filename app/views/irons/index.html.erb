<style>
  h1 {
    border-bottom: solid 3px gray;
    margin-bottom: 24px;
  }
</style>

<%= form_tag irons_url, :method => "get" do %>

  <%= text_field_tag :keyword %>
  <%= submit_tag "Search" %>

<% end %>

<br>

<% if session[:user_id].present? %>

  <p><%= link_to "Add a New Iron", "/irons/new" %></p>

<% end %>

<ul>

  <% @irons.each do |iron| %>
    <li>
      <%= link_to iron.name, "/irons/#{iron.id}" %>
      (<%= number_to_currency(iron.price / 100.0) %>)
      <%= link_to "(delete)", "/irons/#{iron.id}", :method => 'delete' %>
    </li>
  <% end %>

</ul>